<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="15dp"
    android:paddingLeft="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/RootLayout">
        <ImageView
            android:id="@+id/messageAvatar"
            android:layout_alignParentLeft="true"
            android:scaleType="centerInside"
            android:layout_width="34dp"
            android:layout_height="34dp"/>

        <TextView
            android:id="@+id/messageUsername"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/messageAvatar"
            android:layout_alignTop="@+id/messageAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Rose"
            android:textColor="@color/black_500"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageBody"
            android:layout_below="@+id/messageUsername"
            android:layout_alignLeft="@+id/messageUsername"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:elevation="2dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="kldjfir dklsjrgoknd slekrjekfnds dlfkdjslkefdsd"/>

        <TextView
            android:id="@+id/messageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/messageBody"
            android:layout_below="@id/messageBody"
            android:layout_marginRight="5dp"
            android:textSize="11dp"
            android:text="20:51"
            android:textColor="@color/black_500"/>
    </RelativeLayout>

</FrameLayout>